{
  "name": "specs",
  "version": "0.1.1",
  "private": true,
  "bin": {
    "module-name": "./bin/www"
  },
  "scripts": {
    "prestart": "npm stop",
    "start": "node ./bin/www",
    "stop": "pkill specs || true",
    "pretest": "PORT=1337 npm start & sleep 1",
    "test": "PORT=1337 node_modules/.bin/cucumber-js --require features-support",
    "posttest": "npm stop",
    "pretest-with-coverage": "npm run pretest",
    "test-with-coverage": "PORT=1337 node_modules/.bin/istanbul cover node_modules/.bin/cucumber-js --report teamcity --report lcov -- --require features-support -f progress",
    "posttest-with-coverage": "npm run posttest",
    "upload-coverage-data": "node_modules/.bin/codeclimate-test-reporter < coverage/lcov.info",
    "lint": "node_modules/.bin/eslint ./"
  },
  "contributors": [
    "Jim Cresswell <jimCresswell>",
    "Stanislaw Wozniak <swozniak@sponte.uk>"
  ],
  "directories": {
    "lib": "./lib"
  },
  "paths": {
    "server-js": [
      "bin/www",
      "app.js",
      "routes/**/*.js",
      "lib/**/*.js"
    ],
    "client-js": "public/javascript/**/*.js",
    "cucumber-support-js": "features-support/**/*.js",
    "unit-test-js": "lib/**/*test.js",
    "gulp-js": [
      "gulpfile.js",
      "gulp-tasks/**/*.js"
    ],
    "css": "public/css/**/*.css",
    "view-templates": "views/**/*.hbs",
    "feature-files": "features/**/*.feature",
    "test-output-dir": "test-results"
  },
  "dependencies": {
    "body-parser": "~1.13.1",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.0",
    "gherkin": "^2.12.1",
    "hbs": "^3.1.0",
    "morgan": "~1.6.0",
    "newrelic": "^1.20.2",
    "nodegit": "^0.4.1",
    "q-io": "^1.13.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.0",
    "cucumber": "^0.5.2",
    "eslint": "^0.24.0",
    "gulp": "^3.9.0",
    "gulp-cucumber": "0.0.12",
    "gulp-develop-server": "^0.4.3",
    "gulp-eslint": "^0.15.0",
    "gulp-help": "^1.6.0",
    "gulp-jasmine": "^2.0.1",
    "istanbul": "^0.3.17",
    "minimist": "^1.1.2",
    "request": "^2.58.0",
    "require-dir": "^0.3.0",
    "run-sequence": "^1.1.2",
    "should": "^7.0.1"
  }
}
